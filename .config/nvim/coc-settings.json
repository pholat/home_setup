{
    "python.jediEnabled": false,
    // "python.jediPath" : "/home/pholat/.pyenv/versions/3.7.3/envs/nvim3/lib/python3.7/site-packages/",
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "lua": {
          "command": "lua-lsp",
          "filetypes": ["lua"]
        }
    }
}
